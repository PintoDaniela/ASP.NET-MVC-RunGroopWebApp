@using RunGroopWebApp.ViewModels
@model List<UserViewModel> 

<div class="d-flex justify-content-around align-items-center bg-black text-white">
    <h1>Runners</h1>
</div>
<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="bg-white">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        @if (!string.IsNullOrEmpty(@user.ProfileImageUrl))
                                        {
                                            <img alt="Image profile avatar" src="@user.ProfileImageUrl" class="avatar" width="25%" height="130" onerror="this.src='https://cdn-icons-png.flaticon.com/512/1177/1177568.png'">
                                        }
                                        else
                                        {
                                            <img alt="Image profile avatar" src="https://cdn-icons-png.flaticon.com/512/1177/1177568.png" class="avatar" width="25%" height="130">
                                        }
                                        <div class="media-body">
                                            <span class="h6 mb-0">@user.UserName</span>
                                        </div>
                                    </div>
                                </th>
                                <td>Pace @user.Pace</td>
                                <td>Mileage @user.Mileage</td>
                                <td><i class="icon-location"></i>@user.Location</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">
                                        View
                                    </a>
                                </td>
                            </tr>
                            <tr class="table-divider">
                                <th></th>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>